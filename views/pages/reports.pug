html(lang="en")
   head
      include ../partials/head.pug
   body.mt-5.mb-4
      .container
         .row.justify-content-center
            .col-11.col-lg-9.content.pt-4
               .row.mb-3
                  .col.text-center
                     include ../partials/top.pug
               .row
                  .col
                     include ../partials/menu.pug
               .row.text-center
                  .col
                     h1 raporty
               .row.mt-2
                  .col
                     .card.mb-3
                        .card-body
                           h5.card-title Osoba o najwiekszej liczbie kontaktów
